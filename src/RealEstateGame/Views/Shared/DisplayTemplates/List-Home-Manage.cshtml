@model RealEstateGame.Models.Home

<div class="list-home col-sm-12">
    <p>@Model.Address</p>
    <hr/>
    <div class="col-sm-7">
        <ul>
            <li>Value: @string.Format("{0:C0}", Model.Value)</li>
            <li>Asking: @string.Format("{0:C0}", Model.Asking)</li>
            <li>Condition: @Model.Condition</li>
            @if(Model.Condition < 10) {
                <li>Cost to Improve: @string.Format("{0:C}", Model.GetCostImprovement())</li>
            }
            @if (Model.Rented == 1)
            {
                <li>Rented</li>
            }
        </ul>
    </div>
    <div class="col-sm-5">
        @if (Model.Condition < 10)
        {
            using (Html.BeginForm("Improve", "Home", FormMethod.Post))
            {
                <input type="hidden" name="homeId" value="@Model.HomeId"/>
                <button class="btn btn-success ajax" data-target="#rightside">Improve</button>
            }
        }
        @using (Html.BeginForm("Move", "Home", FormMethod.Post))
        {
            <input type="hidden" name="homeId" value="@Model.HomeId" />
            <button class="btn btn-default ajax" data-target="#rightside">Move Here</button>
        }
        @using (Html.BeginForm("Sell", "Home", FormMethod.Post))
        {
            <input type="hidden" name="homeId" value="@Model.HomeId" />
            <button class="btn btn-danger ajax" data-target="#rightside">Sell This Home</button>
        }
        <a href="/Home/RentHome/@Model.HomeId" class="btn btn-primary ajax" data-target="#rightside">Rent This Home</a>
    </div>
</div>